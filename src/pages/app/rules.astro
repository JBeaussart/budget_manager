---
import Layout from '../../layouts/Layout.astro';
import AppShell from '../../components/AppShell.astro';

export const prerender = false
---

<Layout>
  <AppShell
    title="Règles de catégorisation"
    subtitle="Cette section n’utilise plus de stockage local côté navigateur."
    active="rules"
    contentClass="mx-auto max-w-6xl px-6 py-10 space-y-8"
  >
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900">Nouvelle règle</h2>
      <form id="rule-form" class="mt-4 grid gap-4 md:grid-cols-[1.5fr_1fr_auto]">
        <div class="space-y-1">
          <label for="rule-pattern" class="text-xs font-medium text-slate-600">Mot-clé (contient)</label>
          <input id="rule-pattern" type="text" placeholder="ex: lidl, netflix, virement..." class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-900" />
        </div>
        <div class="space-y-1">
          <label for="rule-category" class="text-xs font-medium text-slate-600">Catégorie</label>
          <input id="rule-category" type="text" placeholder="ex: Alimentation, Transports..." class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-900" />
        </div>
        <div class="flex items-end gap-3">
          <label class="inline-flex items-center gap-2 text-sm text-slate-700">
            <input id="rule-enabled" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-emerald-600" checked />
            Active
          </label>
          <button type="submit" class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800">Ajouter</button>
        </div>
      </form>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="mb-3 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-slate-900">Mes règles</h2>
        <p class="text-xs text-slate-500">Synchronisées avec Supabase et disponibles sur toutes vos sessions.</p>
      </div>
      <div class="overflow-x-auto rounded-xl border border-slate-200">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50">
            <tr>
              <th class="px-3 py-2 text-left font-semibold text-slate-700">Active</th>
              <th class="px-3 py-2 text-left font-semibold text-slate-700">Mot-clé</th>
              <th class="px-3 py-2 text-left font-semibold text-slate-700">Champ</th>
              <th class="px-3 py-2 text-left font-semibold text-slate-700">Catégorie</th>
              <th class="px-3 py-2 text-right font-semibold text-slate-700">Actions</th>
            </tr>
          </thead>
          <tbody id="rules-body" class="divide-y divide-slate-200 bg-white"></tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="mb-3 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-slate-900">Re‑catégoriser</h2>
        <div class="flex items-center gap-3">
          <label for="rc-month" class="text-xs font-medium text-slate-600">Mois</label>
          <input id="rc-month" type="month" class="rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-900" />
          <label class="inline-flex items-center gap-2 text-xs text-slate-600">
            <input id="rc-all" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-emerald-600" />
            Tous les mois
          </label>
          <button id="rules-apply" class="rounded-lg bg-emerald-500 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-600">Afficher l'aperçu</button>
        </div>
      </div>
      <p id="rules-feedback" class="min-h-[1.25rem] text-sm"></p>
      <div id="rules-preview" class="mt-4 hidden">
        <p id="rules-summary" class="text-sm text-slate-700"></p>
        <div class="mt-3 overflow-x-auto rounded-xl border border-slate-200">
          <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead class="bg-slate-50">
              <tr>
                <th class="px-3 py-2 text-left font-semibold text-slate-700">Date</th>
                <th class="px-3 py-2 text-left font-semibold text-slate-700">Description</th>
                <th class="px-3 py-2 text-left font-semibold text-slate-700">Contrepartie</th>
                <th class="px-3 py-2 text-left font-semibold text-slate-700">Ancienne cat.</th>
                <th class="px-3 py-2 text-left font-semibold text-slate-700">Nouvelle cat.</th>
              </tr>
            </thead>
            <tbody id="rules-preview-body" class="divide-y divide-slate-200 bg-white"></tbody>
          </table>
        </div>
        <div class="mt-4 flex items-center gap-3">
          <button id="rules-export-changes" class="rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50">Exporter les changements (CSV)</button>
          <button id="rules-commit" class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800">Appliquer les changements</button>
        </div>
      </div>
    </div>
  </AppShell>
</Layout>

<script type="module">
  import '/src/scripts/rules.ts';
</script>
