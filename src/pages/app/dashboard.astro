---
import Layout from '../../layouts/Layout.astro'

export const prerender = false
---

<Layout>
  <main class="min-h-screen bg-slate-50">
    <header class="border-b border-slate-200 bg-white/80 backdrop-blur">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <div class="space-y-1">
          <p class="text-sm uppercase tracking-wide text-emerald-500">Mon Budget</p>
          <h1 class="text-2xl font-semibold text-slate-900">Dashboard</h1>
          <p class="text-sm text-slate-600">Vue synthétique du mois courant et des 12 derniers mois.</p>
        </div>
        <nav class="flex items-center gap-3 text-sm font-medium text-slate-600">
          <a href="/app/dashboard" class="rounded-lg bg-emerald-50 px-3 py-2 text-emerald-600 ring-1 ring-emerald-200">Dashboard</a>
          <a href="/app/transactions" class="rounded-lg px-3 py-2 transition hover:bg-emerald-50 hover:text-emerald-600">Transactions</a>
          <a href="/app/import" class="rounded-lg px-3 py-2 transition hover:bg-emerald-50 hover:text-emerald-600">Importer</a>
          <a href="/app/rules" class="rounded-lg px-3 py-2 transition hover:bg-emerald-50 hover:text-emerald-600">Règles</a>
          <a href="/logout" class="rounded-lg px-3 py-2 text-rose-500 transition hover:bg-rose-50 hover:text-rose-600">Déconnexion</a>
        </nav>
      </div>
    </header>

    <section class="mx-auto max-w-6xl px-6 py-10">
      <div class="mb-6 grid gap-3 sm:grid-cols-2">
        <div class="space-y-1">
          <label for="filter-year" class="text-xs font-medium text-slate-600">Année</label>
          <select id="filter-year" class="w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900"></select>
        </div>
        <div class="space-y-1">
          <label for="filter-month" class="text-xs font-medium text-slate-600">Mois</label>
          <select id="filter-month" class="w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900"></select>
        </div>
      </div>

      <div class="grid gap-4 sm:grid-cols-3">
        <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
          <p class="text-xs font-medium uppercase tracking-wide text-slate-500">Revenus (mois)</p>
          <p id="card-income" class="mt-2 text-2xl font-semibold text-emerald-600">—</p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
          <p class="text-xs font-medium uppercase tracking-wide text-slate-500">Dépenses (mois)</p>
          <p id="card-expenses" class="mt-2 text-2xl font-semibold text-rose-600">—</p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
          <p class="text-xs font-medium uppercase tracking-wide text-slate-500">Épargne (mois)</p>
          <p id="card-saving" class="mt-2 text-2xl font-semibold text-slate-900">—</p>
        </div>
      </div>

      <div class="mt-8 grid gap-6 lg:grid-cols-2">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="mb-4 flex items-center justify-between">
            <p class="text-sm font-semibold text-slate-800">Dépenses par catégorie (mois)</p>
            <span id="pie-month-label" class="text-xs text-slate-500"></span>
          </div>
          <canvas id="chart-categories" height="240"></canvas>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="mb-4 flex items-center justify-between">
            <p class="text-sm font-semibold text-slate-800">Revenus vs Dépenses (année)</p>
            <span id="bar-range-label" class="text-xs text-slate-500"></span>
          </div>
          <canvas id="chart-months" height="240"></canvas>
        </div>
      </div>

      <p id="dash-feedback" class="mt-6 min-h-[1.25rem] text-sm text-slate-600"></p>
    </section>
  </main>
</Layout>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
<script type="module" src="/src/scripts/dashboard.ts"></script>
