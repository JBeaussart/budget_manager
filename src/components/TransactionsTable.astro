<section class="space-y-6">
  <header class="space-y-2">
    <h2 class="text-xl font-semibold text-slate-900">Transactions</h2>
    <p class="text-sm text-slate-600">Filtre par mois, catégorie et recherche. Chargement par pages de 50.</p>
  </header>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-3 md:flex-row md:items-end md:gap-4">
      <div class="flex-1 space-y-1">
        <label for="tx-filter-month" class="text-xs font-medium text-slate-600">Mois</label>
        <input id="tx-filter-month" type="month" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-900" />
      </div>
      <div class="flex-1 space-y-1">
        <label for="tx-filter-category" class="text-xs font-medium text-slate-600">Catégorie</label>
        <select id="tx-filter-category" class="w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900">
          <option value="">Toutes</option>
        </select>
      </div>
      <div class="flex-1 space-y-1">
        <label for="tx-filter-search" class="text-xs font-medium text-slate-600">Recherche</label>
        <input id="tx-filter-search" type="text" placeholder="description ou contrepartie" class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-900" />
      </div>
      <div class="flex items-center gap-3">
        <label class="inline-flex items-center gap-2 text-xs text-slate-600">
          <input id="tx-apply-rules" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-emerald-600" checked />
          Appliquer les règles locales
        </label>
      </div>
      <div class="flex gap-2">
        <button id="tx-apply" class="rounded-lg bg-emerald-500 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-600">Filtrer</button>
        <button id="tx-reset" class="rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50">Réinitialiser</button>
      </div>
    </div>

    <p id="tx-feedback" class="mt-4 min-h-[1.25rem] text-sm text-slate-600"></p>

    <div class="mt-2 overflow-x-auto rounded-xl border border-slate-200">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th class="px-3 py-2 text-left font-semibold text-slate-700">Date</th>
            <th class="px-3 py-2 text-left font-semibold text-slate-700">Description</th>
            <th class="px-3 py-2 text-left font-semibold text-slate-700">Contrepartie</th>
            <th class="px-3 py-2 text-left font-semibold text-slate-700">Catégorie</th>
            <th class="px-3 py-2 text-right font-semibold text-slate-700">Montant</th>
          </tr>
        </thead>
        <tbody id="tx-body" class="divide-y divide-slate-200 bg-white"></tbody>
      </table>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <p id="tx-stats" class="text-sm text-slate-600">Aucune donnée.</p>
      <button id="tx-more" class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800 disabled:opacity-50" disabled>Plus</button>
    </div>
  </div>
</section>

<script type="module" src="/src/scripts/transactions-table.ts"></script>
